<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/mProfilepicImageView"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/_10sdp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/mUserNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:text="Syro Malabar Smart Catechism"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#ffff66"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/mEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Syro Malabar Catechism Center"
        android:textColor="#ffff66"
        android:textSize="@dimen/_10sdp" />

</LinearLayout>
